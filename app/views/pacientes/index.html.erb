<!-- app/views/pacientes/index.html.erb -->
<h1>Lista de Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Tipo ID</th>
    </tr>
  </thead>
  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.nombre %></td>
        <td><%= paciente.email %></td>
        <td><%= paciente.tipo_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
